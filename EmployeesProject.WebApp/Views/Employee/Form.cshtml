@model EmployeesProject.WebApp.ViewModels.EmployeeViewModel

    <partial name="_PartialEmployee.cshtml" />
    <div class="row">
        <div class="col-12">
            <table id="employees-table" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Fecha de nacimiento</th>
                        <th>DUI</th>
                        <th>NIT</th>
                        <th>ISSS</th>
                        <th>Telefono</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Employees)
                    {
                        <tr>

                            <td>@item.Nombres</td>
                            <td>@item.Apellidos</td>
                            <td>@item.FechaNacimiento</td>
                            <td>@item.DUI</td>
                            <td>@item.NIT</td>
                            <td>@item.ISSS</td>
                            <td>@item.Telefono</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @section scripts {
        <script type="text/javascript" src="~/js/views/employee/form.js"></script>
    }